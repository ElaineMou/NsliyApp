<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g200"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/g900"
            android:textSize="@dimen/data_entry_font_size"
            android:text="@string/meaning"/>
        <EditText
            android:id="@+id/meaning_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/meaning_hint"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="140"
            android:maxLines="4"/>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/pronunciation_series"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/pronunciation_spacing"
                android:verticalSpacing="@dimen/pronunciation_spacing"/>
            <LinearLayout
                android:id="@+id/thumbnail_series"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/view_activity_spacing"
                android:verticalSpacing="@dimen/view_activity_spacing"
                android:background="@color/g50"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>